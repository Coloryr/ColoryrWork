<UserControl
    x:Class="ColoryrBuild.Views.ServerConfigView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ColoryrBuild.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <GroupBox
                    Margin="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Header="Socket服务器设置">
                    <Grid Margin="5">
                        <Label
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="地址" />
                        <TextBox
                            Width="100"
                            Height="20"
                            Margin="34,3,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top" />
                        <Label
                            Margin="0,25,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="端口" />
                        <TextBox
                            Width="100"
                            Height="20"
                            Margin="34,28,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top" />
                    </Grid>
                </GroupBox>
                <GroupBox
                    Margin="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Header="Mqtt服务器设置">
                    <Grid Margin="5">
                        <Label
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="地址" />
                        <TextBox
                            Width="100"
                            Height="20"
                            Margin="34,3,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top" />
                        <Label
                            Margin="0,25,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="端口" />
                        <TextBox
                            Width="100"
                            Height="20"
                            Margin="34,28,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top" />
                    </Grid>
                </GroupBox>
                <GroupBox Margin="2" Header="WebSocket设置">
                    <Grid Margin="5">
                        <Label
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="地址" />
                        <TextBox
                            Width="100"
                            Height="20"
                            Margin="34,3,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top" />
                        <Label
                            Margin="0,25,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="端口" />
                        <TextBox
                            Width="100"
                            Height="20"
                            Margin="34,28,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top" />
                    </Grid>
                </GroupBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
