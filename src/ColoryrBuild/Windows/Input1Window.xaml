<Window
    x:Class="ColoryrBuild.Windows.Input1Window"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ColoryrBuild.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Input1Window"
    Width="284"
    Height="160"
    mc:Ignorable="d">
    <Grid>
        <StackPanel Margin="4" VerticalAlignment="Top">
            <Label Name="Lable1" />
            <TextBox Name="Input1" VerticalAlignment="Top" />
            <Label Name="Lable2" />
            <TextBox Name="Input2" VerticalAlignment="Top" />
            <Grid Margin="10,6,10,0">
                <Button
                    Width="100"
                    HorizontalAlignment="Left"
                    Click="Button_Click"
                    Content="确定" />
                <Button
                    Width="100"
                    HorizontalAlignment="Right"
                    Click="Button_Click_1"
                    Content="取消" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>
