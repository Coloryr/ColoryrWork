                <Grid>
                    <Rectangle Fill="#FFF4F4F5" Stroke="#FF5ABED6" StrokeThickness="2"/>
                    <ListView Margin="2,2,2,0" Height="361" VerticalAlignment="Top" Name="ListDll">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="UUID" Width="320" DisplayMemberBinding="{Binding UUID}"/>
                                <GridViewColumn Header="说明" Width="240" DisplayMemberBinding="{Binding Text}"/>
                                <GridViewColumn Header="版本" Width="40" DisplayMemberBinding="{Binding Version}"/>
                                <GridViewColumn Header="创建时间" Width="80" DisplayMemberBinding="{Binding CreateTime}"/>
                                <GridViewColumn Header="修改时间" Width="80" DisplayMemberBinding="{Binding UpdataTime}"/>
                            </GridView>
                        </ListView.View>
                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="添加" Click="Add_Dll_Click"/>
                                <MenuItem Header="修改" Click="Change_Dll_Click"/>
                                <MenuItem Header="删除" Click="Delete_Dll_Click"/>
                            </ContextMenu>
                        </ListView.ContextMenu>
                    </ListView>
                    <Label Content="搜索" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="2,363,0,0"/>
                    <TextBox TextWrapping="Wrap" Width="500" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="44,367,0,0" Name="InputDll" TextChanged="Input_Dll_TextChanged"/>
