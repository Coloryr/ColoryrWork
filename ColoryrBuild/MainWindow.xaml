                    <Button Content="添加" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="609,367,0,0" Width="55" Click="Add_Dll_Click"/>
                    <Button Content="修改" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="669,367,0,0" Width="54" Click="Change_Dll_Click"/>
                    <Button Content="刷新" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="728,367,0,0" Width="55" Click="Re_Dll_Click"/>
                </Grid>
